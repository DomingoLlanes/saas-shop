{
  "name": "domingollanes/saas-shop",
  "license": "MIT",
  "type": "project",
  "description": "Shop SaaS in PHP and Symfony using DDD",
  "require": {
    "php": "^8.0",

    "ext-amqp": "*",
    "ext-apcu": "*",
    "ext-json": "*",
    "ext-zend-opcache": "*",
    "ext-pdo": "*",

    "symfony/framework-bundle": "^5.3",
    "symfony/messenger": "^5.3",
    "symfony/dotenv": "^5.3",
    "symfony/yaml": "^5.3",
    "symfony/twig-bundle": "^5.3",
    "symfony/validator": "^5.3",

    "lambdish/phunctional": "^2.0",

    "ramsey/uuid": "^3.9",

    "doctrine/dbal": "^2.10",
    "doctrine/orm": "^2.7",
    "ocramius/proxy-manager": "2.8.1",

    "elasticsearch/elasticsearch": "^7.3",
    "monolog/monolog": "^2.1",

    "endclothing/prometheus_client_php": "^1.0",
    "firebase/php-jwt": "^5.4"
  },
  "require-dev": {
    "ext-xdebug": "*",

    "roave/security-advisories": "dev-master",

    "behat/behat": "^3.6",
    "friends-of-behat/mink-extension": "^2.4",
    "behat/mink-browserkit-driver": "^1.3",
    "friends-of-behat/symfony-extension": "^2.1",

    "phpunit/phpunit": "^9.2",
    "mockery/mockery": "^1.4",

    "fzaninotto/faker": "^1.9",

    "symfony/debug": "^4.4",
    "vimeo/psalm": "^4.1"
  },
  "autoload": {
    "psr-4": {
      "ShopSaas\\Apps\\Marketplace\\Backend\\": "apps/marketplace/backend/src",
      "ShopSaas\\Apps\\Marketplace\\Frontend\\": "apps/marketplace/frontend/src",

      "ShopSaas\\Apps\\Backoffice\\Backend\\": "apps/backoffice/backend/src",
      "ShopSaas\\Apps\\Backoffice\\Frontend\\": "apps/backoffice/frontend/src",

      "ShopSaas\\": ["src"]
    }
  },
  "autoload-dev": {
    "psr-4": {
      "ShopSaas\\Tests\\": ["tests"]
    }
  },
  "minimum-stability": "RC"
}
